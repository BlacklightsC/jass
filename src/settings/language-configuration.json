{
  
    "comments": {
        "lineComment": "//"
    },
    // symbols used as brackets
    "brackets": [
        ["[", "]"],
        ["(", ")"],
        ["if", "endif"],
        ["loop", "endloop"],
        ["function", "endfunction"],
        ["globals", "endglobals"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"]
    ],
    "folding": {
      "offSide": true,
      "markers": {
        "start": "\\s(globals|function|if|loop)\\s",
        "end": "\\s(endglobals|endfunction|endif|endloop)\\s"
      }
    }
}