{
  "name": "jass",
  "displayName": "jass",
  "description": "目标是扩展成为主流的jass插件。\nQQ群：137199441，提出你宝贵的建议。",
  "icon": "src/resources/image/jass.png",
  "publisher": "jass",
  "version": "0.0.15",
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Jass configuration",
      "properties": {}
    },
    "languages": [
      {
        "id": "jass",
        "aliases": [
          "jass",
          "jass2"
        ],
        "extensions": [
          ".jass",
          ".j",
          ".ai"
        ],
        "configuration": "./src/settings/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "source.jass",
        "language": "jass",
        "path": "./src/settings/jass.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "jass",
        "path": "./src/settings/snippets.json"
      }
    ],
    "documentFormattingProvider": "true"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/naichabaobao/jass.git"
  },
  "homepage": "https://gitee.com/naichabaobao/jass/raw/master/README.md",
  "activationEvents": [
    "onLanguage:jass"
  ],
  "main": "./src/js/extension",
  "scripts": {
    "test": "node ./src/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "eslint": "^5.13.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "vscode-test": "^1.0.2"
  }
}
