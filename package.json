{
  "name": "jass",
  "displayName": "jass",
  "description": "目标是扩展成为主流的jass插件。\nQQ群：137199441，提出你宝贵的建议。",
  "icon": "src/resources/image/jass.png",
  "publisher": "jass",
  "version": "0.0.29",
  "keywords": [
    "jass",
    "warcraft"
  ],
  "engines": {
    "vscode": "^1.37.0"
  },
  "markdown": "github",
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Jass",
      "properties": {
        "jass.pjass.enable": {
          "type": "boolean",
          "default": "false",
          "description": "是否開啓pjass語法檢測"
        },
        "jass.includes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "包含路徑,插件會找到.j|.ai文件(不會深度遍歷)"
        }
      }
    },
    "languages": [
      {
        "id": "jass",
        "aliases": [
          "jass",
          "jass2"
        ],
        "extensions": [
          ".j",
          ".ai"
        ],
        "configuration": "./src/settings/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "scopeName": "source.jass",
        "language": "jass",
        "path": "./src/settings/jass.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "jass",
        "path": "./src/settings/snippets.json"
      }
    ],
    "documentFormattingProvider": "true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fnfufnfu/jass"
  },
  "homepage": "https://raw.githubusercontent.com/fnfufnfu/jass/master/README.md",
  "activationEvents": [
    "onLanguage:jass"
  ],
  "main": "./out/src/extension",
  "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	}
}
